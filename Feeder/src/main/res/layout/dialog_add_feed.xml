<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/dialog_add_feed_title"
            android:id="@+id/dialog_add_feed_title"
            android:layout_gravity="center"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dialog_add_feed_name_hint"
            android:id="@+id/dialog_add_feed_name"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dialog_add_feed_url_hint"
            android:id="@+id/dialog_add_feed_url"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_add_feed_mark_as_favorite"
            android:id="@+id/checkBox"
            android:layout_gravity="left|center_vertical"/>
</LinearLayout>